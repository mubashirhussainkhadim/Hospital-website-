<section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          Expert Care for Your Health
        </h1>
        <p class="text-xl text-blue-100 mb-8 leading-relaxed">
          Khadim Hospital in Kot Radha Kishan is your trusted destination for Gynecology and General Surgery. Led by Dr. Hafiz Qasim, our dedicated team provides top-tier medical care with advanced technology and a patient-centered approach.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/book" class="btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Book Appointment
          </a>
          <a href="/contact" class="btn-outline border-white text-white hover:bg-white hover:text-primary-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Contact Now
          </a>
        </div>
      </div>

      <!-- Image/Illustration -->
      <div class="hidden lg:block">
        <div class="relative">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8">
            <svg class="w-full h-80" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
              <!-- Hospital building illustration -->
              <rect x="50" y="150" width="300" height="120" fill="white" rx="8"/>
              <rect x="70" y="130" width="260" height="20" fill="#e5e7eb"/>
              <rect x="90" y="170" width="40" height="60" fill="#3b82f6" rx="4"/>
              <rect x="150" y="170" width="40" height="60" fill="#3b82f6" rx="4"/>
              <rect x="210" y="170" width="40" height="60" fill="#3b82f6" rx="4"/>
              <rect x="270" y="170" width="40" height="60" fill="#3b82f6" rx="4"/>
              
              <!-- Cross symbol -->
              <rect x="180" y="80" width="40" height="15" fill="#ef4444" rx="2"/>
              <rect x="192.5" y="67.5" width="15" height="40" fill="#ef4444" rx="2"/>
              
              <!-- Entrance -->
              <rect x="175" y="200" width="50" height="70" fill="#1f2937" rx="4"/>
              <circle cx="215" cy="235" r="3" fill="#fbbf24"/>
              
              <!-- Medical staff figures -->
              <circle cx="120" cy="90" r="15" fill="#fde68a"/>
              <rect x="110" y="105" width="20" height="30" fill="white" rx="3"/>
              <circle cx="280" cy="90" r="15" fill="#fde68a"/>
              <rect x="270" y="105" width="20" height="30" fill="white" rx="3"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
