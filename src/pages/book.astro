---
import Layout from '../components/Layout.astro';
import BookingForm from '../components/BookingForm.astro';
---

<Layout title="Book Appointment - Khadim Hospital" description="Schedule your appointment with our expert medical team at Khadim Hospital. Easy online booking for gynecology, general surgery, and emergency consultations.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Book Your Appointment</h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto">
        Schedule your visit with our expert medical team. We're here to provide you with the best healthcare services.
      </p>
    </div>
  </section>

  <!-- Booking Information -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-16">
        <!-- Appointment Types -->
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-xl p-8">
          <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Appointment Types</h3>
          <ul class="text-gray-600 space-y-2 text-sm">
            <li>• Gynecology Consultation</li>
            <li>• General Surgery</li>
            <li>• Prenatal Care</li>
            <li>• Emergency Consultation</li>
            <li>• Follow-up Visits</li>
          </ul>
        </div>

        <!-- Booking Guidelines -->
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 rounded-xl p-8">
          <div class="w-12 h-12 bg-secondary-600 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Booking Guidelines</h3>
          <ul class="text-gray-600 space-y-2 text-sm">
            <li>• Book at least 24 hours in advance</li>
            <li>• Bring valid ID and insurance</li>
            <li>• Arrive 15 minutes early</li>
            <li>• Cancel 2 hours before if needed</li>
            <li>• Emergency cases: Call directly</li>
          </ul>
        </div>

        <!-- Contact for Emergency -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-8">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Emergency?</h3>
          <p class="text-gray-600 text-sm mb-4">For urgent medical situations, please call us directly:</p>
          <a href="tel:03084876102" class="inline-flex items-center text-red-600 font-semibold hover:text-red-700 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            0308 4876102
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Booking Form -->
  <BookingForm />

  <!-- Additional Information -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Office Hours -->
        <div class="bg-gray-50 rounded-xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Office Hours</h3>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-900">Monday - Friday</span>
              <span class="text-gray-600">8:00 AM - 8:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-900">Saturday</span>
              <span class="text-gray-600">9:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="font-medium text-gray-900">Sunday</span>
              <span class="text-gray-600">10:00 AM - 4:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="font-medium text-red-600">Emergency Services</span>
              <span class="text-red-600 font-semibold">24/7 Available</span>
            </div>
          </div>
        </div>

        <!-- What to Bring -->
        <div class="bg-gray-50 rounded-xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">What to Bring</h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-600">Valid government-issued photo ID</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-600">Insurance card (if applicable)</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-600">List of current medications</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-600">Previous medical records (if available)</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-600">List of allergies and medical history</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="bg-primary-600 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Need Help with Booking?</h2>
      <p class="text-blue-100 mb-8 max-w-2xl mx-auto">
        Our staff is available to assist you with scheduling your appointment or answering any questions you may have.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:03084876102" class="btn-secondary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call Us: 0308 4876102
        </a>
        <a href="/contact" class="btn-outline border-white text-white hover:bg-white hover:text-primary-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Visit Us
        </a>
      </div>
    </div>
  </section>
</Layout>
